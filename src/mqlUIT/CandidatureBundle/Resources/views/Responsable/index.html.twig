                                                   <i class="btn-icon-only icon-edit"></i>
                                              </a>
                                                       
                                              </td>
                                            </tr>   
                                                 {% endfor %}   
                                            
   

                                             {% endif %}   
                                                
                                            {% for entity in entities %}
                                                 {% set counter = 0 %}
                                                
                                                {% for fil in filiere %}
                                            <tr>
                                                   
                                                    <td>{{ entity.nom }}</td>
                                                    <td style="width: 100px;">{{ entity.prenom }}</td>
                                                    <td>{{ entity.email }}</td>
                
                                               
                                                <td>
                                                    
                                                    {% if entity.id == fil.responsable.id %}
                                                        {% set counter = 5 %}
                                                    {% endif %}
                                                   
                                                        
                                                 {% if counter == 0 %}
                                                 <a class="btn btn-small btn-info"  href="{{ path('filiere_new', { 'id': entity.id }) }}"  title="affecter"  ><i class="btn-icon-only icon-ok"></i></a>
                                                 {% endif %}
                                                 {% if counter == 5 %} 
                                                    
                                                   
                                                   <a  data-toggle="modal"  href="{{ path('filiere_edit', { 'id': fil.id }) }}"   title="modifier" > 
                                                    {{ fil.intitule }}
                                              </a>
                                                 {% endif %} 
                                                 </td>
                                               <td>
                                              <a  data-toggle="modal"  href="{{ path('responsable_edit', { 'id': entity.id }) }}"  class="btn btn-small btn-warning"  title="modifier" > 
                                                   <i class="btn-icon-only icon-edit"></i>
                                              </a>
                                                       
                                              </td>
