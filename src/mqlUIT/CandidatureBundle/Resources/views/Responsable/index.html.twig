                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% if filiere == null%}
                                                 {% for entity in entities %}
                                                 
                                                
                                              
                                            <tr>
                                                   
                                                    <td>{{ entity.nom }}</td>
