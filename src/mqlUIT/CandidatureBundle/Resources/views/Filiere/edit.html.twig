{% extends '::base.html.twig' %}
{% block titreP -%}Modification d'une Filiere {% endblock %}
{% block body -%}

    <form action="{{ path('filiere_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-large btn-warning">Modifier</button>
        </p>
    </form>

        <form action="{{ path('filiere_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit"  class="btn btn-large btn-danger">Supprimer</button>
        </form>

{% endblock %}
