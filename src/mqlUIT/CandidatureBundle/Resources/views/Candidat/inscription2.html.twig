				<a data-toggle="modal" href="#modal-note" class="btn btn-small btn-success" href="javascript:;" style="float: right;">
                                Ajouter une Note Semetre</a>
					{% endif %}
					
					
                                </div> <!-- /widget-content -->
					
			</div> <!-- /widget -->					
			
</div>
{% endif %}
    

